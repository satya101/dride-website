{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"dride-website": {
			"root": "",
			"sourceRoot": "src",
			"projectType": "application",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:browser",
					"options": {
						"outputPath": "dist/browser",
						"index": "src/index.html",
						"main": "src/main.ts",
						"tsConfig": "src/tsconfig.app.json",
						"polyfills": "src/polyfills.ts",
						"assets": [
							"src/code",
							"src/assets",
							"src/favicon.ico",
							"src/manifest.json",
							"src/firebase-messaging-sw.js",
							"src/sitemap.xml"
						],
						"styles": [
							"src/styles.scss",
							"src/assets/fonts/icomoon/style.css",
							"node_modules/angular-instantsearch/bundles/instantsearch.min.css",
							"node_modules/angular-instantsearch/bundles/instantsearch-theme-algolia.min.css"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"extractLicenses": true,
							"vendorChunk": false,
							"buildOptimizer": true,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							]
						}
					}
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"options": {
						"browserTarget": "dride-website:build"
					},
					"configurations": {
						"production": {
							"browserTarget": "dride-website:build:production"
						}
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"browserTarget": "dride-website:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"karmaConfig": "./karma.conf.js",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "src/tsconfig.spec.json",
						"scripts": [],
						"styles": ["src/styles.scss"],
						"assets": [
							"src/code",
							"src/assets",
							"src/favicon.ico",
							"src/manifest.json",
							"src/firebase-messaging-sw.js",
							"src/sitemap.xml"
						]
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": ["src/tsconfig.app.json", "src/tsconfig.spec.json"],
						"exclude": ["**/node_modules/**"]
					}
				},
				"server": {
					"builder": "@angular-devkit/build-angular:server",
					"options": {
						"outputPath": "dist/server",
						"main": "main.server.ts",
						"tsConfig": "tsconfig.server.json"
					}
				}
			}
		},
		"dride-website-e2e": {
			"root": "",
			"sourceRoot": "",
			"projectType": "application",
			"architect": {
				"e2e": {
					"builder": "@angular-devkit/build-angular:protractor",
					"options": {
						"protractorConfig": "./protractor.conf.js",
						"devServerTarget": "dride-website:serve"
					}
				},
				"lint": {
					"builder": "@angular-devkit/build-angular:tslint",
					"options": {
						"tsConfig": ["e2e/tsconfig.e2e.json"],
						"exclude": ["**/node_modules/**"]
					}
				}
			}
		}
	},
	"defaultProject": "dride-website",
	"schematics": {
		"@schematics/angular:component": {
			"inlineStyle": true,
			"prefix": "app",
			"styleext": "scss"
		},
		"@schematics/angular:directive": {
			"prefix": "app"
		}
	}
}
